<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_bg_topheader">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:fontFamily="casual"
                android:text="QUIZ"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:text="1. How many international half centuries has Sachin scored?"
                android:textSize="30sp" />

                <RadioGroup
                    android:id="@+id/q1options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/q1o1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="146"
                        android:textSize="25sp" />

                    <RadioButton
                        android:id="@+id/q1o2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="164"
                        android:textSize="25sp" />

                    <RadioButton
                        android:id="@+id/q1o3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="182"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/q1o4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="200"
                        android:textSize="25sp" />
                </RadioGroup>

            <Button
                android:id="@+id/q1Submit"
                android:layout_width="197dp"
                android:layout_height="77dp"
                android:background="@drawable/submit_btn_border"
                android:text="SUBMIT"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:text="2. What is Sir Donald Bradman's batting average in tests?"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/q2options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q2o1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="99.94"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/q2o2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="100.00"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/q2o3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="98.84"
                    android:textSize="25sp"/>

                <RadioButton
                    android:id="@+id/q4o4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="101.10"
                    android:textSize="25sp" />
            </RadioGroup>

            <Button
                android:id="@+id/q2Submit"
                android:layout_width="197dp"
                android:layout_height="77dp"
                android:background="@drawable/submit_btn_border"
                android:text="SUBMIT"
                android:textSize="30sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:text="3. How many runs are awarded to the batting side if the ball, when in play, touches any fielder's accessories?"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/q3options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q3o1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="1"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/q3o2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="4"
                    android:textSize="25sp" />

                <RadioButton
                    android:id="@+id/q3o3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="3"
                    android:textSize="25sp"/>

                <RadioButton
                    android:id="@+id/q3o4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="5"
                    android:textSize="25sp" />
            </RadioGroup>

            <Button
                android:id="@+id/q3Submit"
                android:layout_width="197dp"
                android:layout_height="77dp"
                android:background="@drawable/submit_btn_border"
                android:text="SUBMIT"
                android:textSize="30sp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="197dp"
                android:layout_height="77dp"
                android:background="@drawable/submit_btn_border"
                android:text="Claim Rewards"
                android:textSize="30sp"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>